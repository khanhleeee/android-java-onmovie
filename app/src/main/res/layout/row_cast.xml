<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="25dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_cast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/actor" />

    <TextView
        android:id="@+id/name_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_cast"
        android:layout_alignLeft="@+id/avatar_cast"
        android:layout_alignRight="@+id/avatar_cast"
        android:layout_marginTop="5dp"
        android:ellipsize="end"

        android:lines="1"
        android:text="Dien vien"
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>